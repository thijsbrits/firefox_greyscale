{
  "manifest_version": 2,
  "name": "Greyscale Toggle",
  "version": "1.0",
  "description": "Toggle greyscale for websites.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
